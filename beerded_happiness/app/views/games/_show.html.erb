<div class="show-game">
	<h2><%= @current_game.event.title %> Game <%= @current_game.id %>:</h2>
	<p>Status: <%= @current_game.status %></p>
	<p>Players: <br>
	<% @current_game.users.each do |user| %>
		<%= user.name %> 
	<% end %>

	<%= button_to "I Won!", { :controller => "games", :action => "update", :won => true}, :method => :patch%>

	<%= button_to "I Lost :(", { :controller => "games", :action => "update", :won => false}, :method => :patch%>
</div>
